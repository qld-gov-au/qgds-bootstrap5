<!-- QGDS Component: Table -->

<div class="table-responsive qld-table {{customClass}}">

    <table class="table {{variantClass}}">

        {{#if caption}}
        <caption class="caption">
            {{caption}}
            {{#if subcaption}}
            <span class="sub-caption">{{{ subcaption }}}</span>
            {{/if}}
        </caption>
        {{/if}}

        {{#if headers}}
        <thead>
            <tr>
                {{#headers}}
                <th scope="col">{{.}}</th>
                {{/headers}}
            </tr>
        </thead>
        {{/if}}

        <tbody>
            {{#rows}}
            <tr class="">
                {{#cells}}
                <td>{{.}}</td>
                {{/cells}}
            </tr>
            {{/rows}}
        </tbody>

        {{#if footer}}
        <tfoot>
            {{#footer}}
            <tr class="">
                {{#cells}}
                <td>{{.}}</td>
                {{/cells}}
            </tr>
            {{/footer}}
        </tfoot>
        {{/if}}

    </table>
</div>