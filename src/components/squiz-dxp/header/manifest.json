{
  "$schema": "http://localhost:3000/schemas/v1.json",
  "name": "header",
  "namespace": "qgds-bs5-dev",
  "displayName": "Header",
  "description": "QGDS Bootstrap 5 - Header Component",
  "version": "1.0.4",
  "mainFunction": "main",
  "icon": {
    "id": "fiber_new",
    "color": {
      "type": "enum",
      "value": "blue"
    }
  },
  "staticFiles": {
    "locationRoot": "static"
  },
  "functions": [
    {
      "name": "main",
      "entry": "main.cjs",
      "input": {
        "type": "object",
        "properties": {
          "iconRoot": {
            "type": "string",
            "default": "svg-icons.svg"
          },
          "icons": {
            "type": "object",
            "properties": {
              "menu": {
                "type": "string",
                "default": "qld__icon__menu"
              },
              "search": {
                "type": "string",
                "default": "qld__icon__search"
              },
              "close": {
                "type": "string",
                "default": "qld__icon__close"
              },
              "chevronDown": {
                "type": "string",
                "default": "qld__icon__chevron-down"
              }
            },
            "required": []
          },
          "sitePreHeader": {
            "type": "object",
            "title": "Pre-Header",
            "properties": {
              "url": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://qld.gov.au"
                  }
                },
                "required": []
              },
              "text": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "default": "www.qld.gov.au"
                  }
                },
                "required": []
              },
              "CTA": {
                "type": "array",
                "title": "Call to Action",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "url": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": []
                    },
                    "text": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": []
                    },
                    "dropdown_enabled": {
                      "type": "boolean",
                      "default": false
                    },
                    "dropdown_options": {
                      "type": "object",
                      "properties": {
                        "dropdown_type": {
                          "type": "string",
                          "enum": [
                            "list",
                            "form"
                          ]
                        },
                        "dropdown_config": {
                          "title": "Dropdown Item",
                          "type": "object",
                          "properties": {
                            "groups": {
                              "title": "Link Item",
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "action": {
                                    "type": "string"
                                  },
                                  "url": {
                                    "type": "string"
                                  },
                                  "label": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "url",
                                  "label"
                                ]
                              }
                            },
                            "content": {
                              "title": "Content Item",
                              "anyOf": [
                                {
                                  "title": "Multi line",
                                  "type": "string",
                                  "format": "multi-line"
                                },
                                {
                                  "title": "WYSIWYG",
                                  "type": "FormattedText"
                                },
                                {
                                  "title": "Matrix Asset",
                                  "type": "string",
                                  "format": "matrix-asset-uri"
                                }
                              ]
                            }
                          },
                          "required": []
                        },
                        "view_more_config": {
                          "title": "View More settings",
                          "type": "object",
                          "properties": {
                            "view_more": {
                              "type": "boolean",
                              "default": false
                            },
                            "label": {
                              "type": "string"
                            },
                            "url": {
                              "type": "string"
                            },
                            "target": {
                              "type": "string",
                              "enum": [
                                "_self",
                                "_blank",
                                "_parent",
                                "_top"
                              ],
                              "default": "_self"
                            }
                          },
                          "required": []
                        }
                      },
                      "required": []
                    }
                  },
                  "required": []
                }
              }
            },
            "required": [
              "url",
              "text",
              "CTA"
            ]
          },
          "siteHeader": {
            "type": "object",
            "title": "Site Header",
            "properties": {
              "config": {
                "type": "object",
                "properties": {
                  "masterbrand_enabled": {
                    "type": "boolean",
                    "default": true
                  },
                  "subbrand_enabled": {
                    "type": "boolean",
                    "default": false
                  },
                  "cobrand_enabled": {
                    "type": "boolean",
                    "default": false
                  },
                  "endorsed_enabled": {
                    "type": "boolean",
                    "default": false
                  },
                  "standalone_enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": []
              },
              "url": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://qld.gov.au"
                  }
                },
                "required": []
              },
              "logo": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string"
                  }
                },
                "required": []
              },
              "secondaryType": {
                "type": "object",
                "properties": {
                  "logo": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": []
                  },
                  "siteTitle": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": []
                  },
                  "subline": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": []
                  }
                },
                "required": []
              }
            },
            "required": []
          },
          "siteSearchAsset": {
            "type": "object",
            "title": "Site Search",
            "properties": {
              "value": {
                "type": "string",
                "default": "#"
              },
              "placeholder": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "formAction": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://www.qld.gov.au/search"
                  }
                },
                "required": [
                  "url"
                ]
              },
              "options": {
                "type": "object",
                "properties": {
                  "borderStyle": {
                    "type": "object",
                    "properties": {
                      "full": {
                        "type": "boolean",
                        "default": false
                      }
                    },
                    "required": []
                  }
                },
                "required": []
              }
            },
            "required": [
              "value",
              "formAction"
            ]
          },
          "searchInput": {
            "type": "object",
            "title": "Search Input",
            "properties": {
              "customClass": {
                "type": "string"
              },
              "variantClass": {
                "type": "string"
              },
              "placeholder": {
                "type": "string",
                "default": "Search website"
              },
              "inputID": {
                "type": "string",
                "default": "search"
              },
              "inputName": {
                "type": "string",
                "default": "query"
              },
              "buttonID": {
                "type": "string",
                "default": "search-button"
              },
              "buttonType": {
                "type": "string",
                "default": "submit"
              },
              "buttonLabel": {
                "type": "string",
                "default": "Search"
              },
              "ariaLabel": {
                "type": "string",
                "default": "Search website"
              },
              "suggestions": {
                "type": "boolean",
                "default": true
              },
              "tags": {
                "type": "object",
                "properties": {
                  "collection": {
                    "type": "string"
                  },
                  "profile": {
                    "type": "string"
                  },
                  "numranks": {
                    "type": "integer"
                  },
                  "tiers": {
                    "type": "string"
                  },
                  "suggestions": {
                    "type": "string"
                  },
                  "resultUrl": {
                    "type": "string"
                  }
                },
                "required": [
                  "collection"
                ]
              },
              "default_suggestions": {
                "type": "object",
                "properties": {
                  "popular_services": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "link": {
                          "type": "string"
                        }
                      },
                      "required": []
                    }
                  },
                  "categories": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "link": {
                          "type": "string"
                        }
                      },
                      "required": []
                    }
                  },
                  "options": {
                    "type": "object",
                    "properties": {
                      "view_more": {
                        "type": "boolean",
                        "default": false
                      },
                      "label": {
                        "type": "string"
                      },
                      "href": {
                        "type": "string"
                      }
                    },
                    "required": []
                  }
                },
                "required": []
              }
            },
            "required": []
          },
          "navBar": {
            "title": "Main Navigation",
            "type": "object",
            "properties": {
              "metadata": {
                "type": "object",
                "title": "Metadata",
                "properties": {
                  "target_url": {
                    "type": "string"
                  },
                  "options": {
                    "type": "object",
                    "title": "Options",
                    "properties": {
                      "showHomeTitleSmallDevices": {
                        "type": "boolean",
                        "default": true
                      },
                      "homeActive": {
                        "type": "boolean",
                        "default": true
                      }
                    },
                    "required": []
                  }
                },
                "required": []
              },
              "navigation": {
                "oneOf": [
                  {
                    "type": "string",
                    "title": "Navigation from Matrix Asset",
                    "format": "matrix-asset-uri"
                  },
                  {
                    "type": "array",
                    "title": "Navigation from manual input",
                    "items": {
                      "type": "object",
                      "title": "Navigation Item",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "icon": {
                          "type": "string"
                        },
                        "target_url": {
                          "type": "string"
                        },
                        "dropdown_enabled": {
                          "type": "boolean",
                          "default": false
                        },
                        "dropdown_options": {
                          "title": "Dropdown Options",
                          "type": "object",
                          "properties": {
                            "feature_link_value": {
                              "type": "string"
                            },
                            "feature_link_href": {
                              "type": "string"
                            },
                            "feature_link_description": {
                              "type": "string"
                            },
                            "view_value": {
                              "type": "string"
                            },
                            "view_href": {
                              "type": "string"
                            }
                          },
                          "required": []
                        },
                        "navigation_items": {
                          "title": "Dropdown Items",
                          "type": "array",
                          "items": {
                            "title": "Dropdown Item",
                            "type": "object",
                            "properties": {
                              "title": {
                                "type": "string"
                              },
                              "description": {
                                "type": "string"
                              },
                              "target_url": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "title",
                              "target_url"
                            ]
                          }
                        }
                      },
                      "required": [
                        "title",
                        "target_url"
                      ]
                    }
                  }
                ]
              }
            },
            "required": []
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/css/qld.bootstrap.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/js/bootstrap.min.js"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/js/qld.bootstrap.min.js"
            }
          }
        ]
      }
    }
  ],
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "previews/example.data.json"
          },
          "wrapper": {
            "path": "previews/preview.html"
          }
        }
      }
    }
  }
}