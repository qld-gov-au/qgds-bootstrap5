{
  "$schema": "http://localhost:3000/schemas/v1.json",
  "name": "cardgrid",
  "namespace": "qgds-bs5-dev",
  "displayName": "Grid of Cards",
  "description": "grid of cards",
  "version": "0.0.1",
  "mainFunction": "main",
  "icon": {
    "id": "fiber_new",
    "color": {
      "type": "enum",
      "value": "blue"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "main.js",
      "input": {
        "properties": {
          "noAction": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "date": {
              "type": "string"
            },
            "variantClass": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "imageAlt": {
              "type": "string"
            },
            "iconClasses": {
              "type": "string"              
            },
            "action": {
              "type": "string"
            },
            "link": {
              "type": "string"
            },
            "arrow": {
              "type": "boolean"
            },
            "feature": {
              "type": "string"
            },
            "featureImagePosition": {
              "type": "string"
            },
            "video": {
              "type": "boolean"
            },
            "videoDuration": {
              "type": "string"
            },
            "footer": {
              "type": "string"
            },
            "equalHeight": {
              "type": "boolean"
            },
          "required": []
          },
          "singleAction": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "date": {
              "type": "string"
            },
            "variantClass": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "imageAlt": {
              "type": "string"
            },
            "iconClasses": {
              "type": "string"              
            },
            "action": {
              "type": "string"
            },
            "link": {
              "type": "string"
            },
            "arrow": {
              "type": "boolean"
            },
            "feature": {
              "type": "string"
            },
            "featureImagePosition": {
              "type": "string"
            },
            "video": {
              "type": "boolean"
            },
            "videoDuration": {
              "type": "string"
            },
            "footer": {
              "type": "string"
            },
            "equalHeight": {
              "type": "boolean"
            },
          "required": []
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "default.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "default.js"
            }
          }
        ]
      }
    }
  ],
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "previews/example.data.json"
          },
          "wrapper": {
            "path": "previews/preview.html"
          }
        }
      }
    }
  },
  "staticFiles": {
    "locationRoot": "static"
  }
}
